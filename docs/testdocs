#!/usr/bin/env bash

# Execute the docs to make sure all code examples are in sync with the library code.

set -e

vendor/bin/uptodocs run README.md --before=docs/before.php
vendor/bin/uptodocs run docs/design_goals.md --before=docs/before.php
vendor/bin/uptodocs run docs/introduction.md --before=docs/before.php
vendor/bin/uptodocs run docs/recursion.md --before=docs/before.php
vendor/bin/uptodocs run docs/order_matters.md --before=docs/before.php
vendor/bin/uptodocs run docs/naming_conventions.md --before=docs/before.php
